<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.ProfileActivity"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_default_image"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:hint="Email" />


    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:hint="Name" />

    <TextView
        android:id="@+id/tvRoleProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Role"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/tvSkillsProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Skills"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:text="Edit"
        android:layout_gravity="center"
        android:onClick="editSettings"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginTop="10dp"
        android:text="Logout"
        android:layout_gravity="center"
        android:onClick="logoutUser"/>
    <Button
        android:id="@+id/btnGoToList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginTop="10dp"
        android:text="User List"
        android:layout_gravity="center"
        android:onClick="goToList"/>

</LinearLayout>